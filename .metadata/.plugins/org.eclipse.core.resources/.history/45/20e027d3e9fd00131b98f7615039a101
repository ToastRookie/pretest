				String firstName = rs.getString("first_name");
				String lastName = rs.getString("last_name");
				
				
				// print the results
				//System.out.format("%s, %s, %s, %s, %s, %s\n", id, firstName, lastName, dateCreated, isAdmin, numPoints);
